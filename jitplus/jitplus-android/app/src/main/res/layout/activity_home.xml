<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JitPlus Home"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_config_program"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mon Programme de Fidélité"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_add_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un client"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_search_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chercher un client"
        android:layout_marginHorizontal="32dp"/>

</LinearLayout>
